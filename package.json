    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.16",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.16",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.16",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.1.3",
    "@prisma/client": "^6.8.2",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
