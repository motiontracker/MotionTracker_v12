{
  "name": "motiontracker",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:dev": "nest start --watch --port 3001",
    "start": "node dist/main",
    "prisma:generate": "dotenv -e .env npx prisma generate",
    "prisma:migrate": "dotenv -e .env npx prisma migrate dev",
    "prisma:studio": "dotenv -e .env npx prisma studio",
    "prisma:fix": "node scripts/fix-prisma-env.js",
    "frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run start:dev\" \"npm run frontend\"",
    "start:all": "concurrently \"npm run prisma:studio\" \"npm run start:dev\" \"npm run frontend\"",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:facebook-oauth": "node scripts/test-facebook-oauth-integration.js",
    "test:facebook-tokens": "node scripts/facebook-oauth-token-validator.js",
    "setup:facebook-oauth": "node scripts/setup-facebook-oauth-env.js",
    "test:campaigns": "node scripts/test-campaign-hierarchy.js",
    "test:campaigns:full": "chmod +x scripts/run-tests.sh && ./scripts/run-tests.sh",
    "test:mock": "NEXT_PUBLIC_USE_MOCK=true npm run frontend",
    "migrations:consolidate": "npx prisma migrate deploy && npx prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Sistema de Tracking Avan√ßado Plug-and-Play",
