# ===============================================
# MOTIONTRACKER - VARI√ÅVEIS DE AMBIENTE
# ===============================================
# Copie este arquivo para .env e configure com seus valores reais

# ===============================================
# üöÄ APLICA√á√ÉO
# ===============================================
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://motiontracker.io
CORS_ORIGINS=https://motiontracker.io,https://www.motiontracker.io,https://app.motiontracker.io

# ===============================================
# üîê SEGURAN√áA
# ===============================================
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# ===============================================
# üóÑÔ∏è BANCO DE DADOS (SUPABASE)
# ===============================================
DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===============================================
# üî¥ REDIS
# ===============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===============================================
# üìò FACEBOOK/META
# ===============================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_PIXEL_ID=your_facebook_pixel_id
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# ===============================================
# üü¢ GOOGLE
# ===============================================
GOOGLE_CLIENT_ID=your_google_client_id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your_ga4_api_secret
GOOGLE_ADS_CUSTOMER_ID=123-456-7890
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token

# ===============================================
# üè∑Ô∏è GOOGLE TAG MANAGER
# ===============================================
GTM_CONTAINER_ID=GTM-XXXXXXX
GTM_ENDPOINT=https://your-gtm-server.com
GTM_API_KEY=your_gtm_api_key

# ===============================================
# üìß EMAIL/SMTP
# ===============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=MotionTracker <noreply@motiontracker.io>

# ===============================================
# üìä MONITORAMENTO
# ===============================================
GRAFANA_PASSWORD=admin_password_here
PROMETHEUS_RETENTION=200h

# ===============================================
# üîß DESENVOLVIMENTO
# ===============================================
NEXT_PUBLIC_API_URL=https://api.motiontracker.io
NEXT_PUBLIC_BACKEND_URL=https://api.motiontracker.io
NEXT_PUBLIC_USE_MOCK=false

# ===============================================
# üì± WHATSAPP BUSINESS
# ===============================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_whatsapp_webhook_token

# ===============================================
# üåê DOM√çNIOS E SSL
# ===============================================
SSL_CERT_PATH=/etc/letsencrypt/live/motiontracker.io
CERTBOT_EMAIL=admin@motiontracker.io